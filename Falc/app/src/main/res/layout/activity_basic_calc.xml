<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:padding="0dp"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context=".BasicCalc">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/BC_PENDING"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="4"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="2">

        <fragment
            android:id="@+id/BC_DISPLAY"
            android:name="faulks.david.falc.NumDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/BC_CLEAR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button5"
            android:padding="0dp"
            android:text="CE"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BC_BACK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@drawable/button5"
            android:padding="0dp"
            android:text="⌫"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BC_SQRT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:padding="0dp"
            android:text="√"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BC_PCT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:padding="0dp"
            android:text="%"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/BC_MEMSTORE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@drawable/button4"
            android:padding="0dp"
            android:text="MS"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BC_MEMSUB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@drawable/button4"
            android:padding="0dp"
            android:text="M−"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BC_MEMADD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button4"
            android:padding="0dp"
            android:text="M+"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BC_DIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:padding="0dp"
            android:text="÷"
            android:textSize="22sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="8">

        <FrameLayout
            android:id="@+id/BC_NUMPAD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_span="3"
            android:layout_weight="3">

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_span="1"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/BC_MULT"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:padding="0dp"
                android:text="×"
                android:textSize="22sp" />

            <Button
                android:id="@+id/BC_SUBT"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:padding="0dp"
                android:text="−"
                android:textSize="22sp" />

            <Button
                android:id="@+id/BC_ADD"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:background="@drawable/button1"
                android:padding="0dp"
                android:text="+"
                android:textSize="22sp" />

        </LinearLayout>
    </TableRow>
</TableLayout>